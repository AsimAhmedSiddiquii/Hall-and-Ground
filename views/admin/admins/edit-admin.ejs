<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Edit User | Hall and Ground</title>
    <link href="/vendor/fontawesome/css/fontawesome.min.css" rel="stylesheet">
    <link href="/vendor/fontawesome/css/solid.min.css" rel="stylesheet">
    <link href="/vendor/fontawesome/css/brands.min.css" rel="stylesheet">
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/master.css" rel="stylesheet">
    <link rel="icon" type="image/png" href="/img/favicon.png">
</head>

<body>
    <div class="wrapper">
        <!-- sidebar navigation component -->
        <nav id="sidebar" class="active">
            <div class="sidebar-header">
                <img src="/img/bootstraper-logo.png" alt="bootraper logo" class="app-logo">
            </div>
            <ul class="list-unstyled components text-secondary">
                <li>
                    <a href="/admin/dashboard"><i class="fas fa-home"></i>Dashboard</a>
                </li>
                <li>
                    <a href="/branch"><i class="fas fa-address-card"></i>Location</a>
                </li>
                <li>
                    <a href="/vendors"><i class="fas fa-cloud-download-alt"></i>Vendors</a>
                </li>
                <li>
                    <a href="/halls"><i class="fas fa-archway"></i>Halls</a>
                </li>
                <li>
                    <a href="#reports" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle no-caret-down"><i class="fas fa-layer-group"></i> Bookings</a>
                    <ul class="collapse list-unstyled" id="reports">
                        <li>
                            <a href="/admin/pending-payments"><i class="fas fa-angle-right"></i> Payments Approvals</a>
                        </li>
                        <li>
                            <a href="/admin/pending-bookings"><i class="fas fa-angle-right"></i> Bookings Approvals</a>
                        </li>
                        <li>
                            <a href="/admin/booking-reports"><i class="fas fa-angle-right"></i> Booking Reports</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="/admin/admins"><i class="fas fa-user-friends"></i>Users</a>
                </li>
            </ul>
        </nav>
        <!-- end of sidebar component -->
        <div id="body" class="active">
            <!-- navbar navigation component -->
            <nav class="navbar navbar-expand-lg navbar-white bg-white">
                <button type="button" id="sidebarCollapse" class="btn btn-light">
                    <i class="fas fa-bars"></i><span></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="nav navbar-nav ms-auto">

                        <li class="nav-item dropdown">
                            <div class="nav-dropdown">
                                <a href="#" id="nav2" class="nav-item nav-link dropdown-toggle text-secondary" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user"></i> <span>Admin</span> <i style="font-size: .8em;" class="fas fa-caret-down"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end nav-link-menu">
                                    <ul class="nav-list">
                                        <li><a href="/admin/logout-admin" class="dropdown-item"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            <!-- end of navbar navigation -->
            <div class="content">
                <div class="container">
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header">Edit User</div>
                                <div class="card-body">
                                    <form action="/admin/edit-admin/<%=adminData._id %>" method="post" class="needs-validation" novalidate accept-charset="utf-8">
                                        <div class="row g-2">
                                            <div class="mb-3 col-md-6">
                                                <label for="email" class="form-label">Full Name</label>
                                                <input type="name" class="form-control" value="<%=adminData.username %>" name="name" placeholder="Full Name" required>
                                                <small class="form-text text-muted">Enter user full name.</small>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please enter full name.</div>
                                            </div>
                                            <div class="mb-3 col-md-6">
                                                <label for="mobile" class="form-label">Mobile Number</label>
                                                <input type="tel" value="<%=adminData.usermob %>" maxlength="10" pattern="[789][0-9]{9}" class="form-control" name="mobile" placeholder="Mobile Number" required>
                                                <small class="form-text text-muted">Phone Number must be 10 digits long.</small>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please enter mobile number.</div>
                                            </div>
                                        </div>
                                        <div class="row g-2">
                                            <div class="mb-3 col-md-6">
                                                <label for="email" class="form-label">Email</label>
                                                <input type="email" value="<%=adminData.useremail %>" class="form-control" name="email" placeholder="Email" required>
                                                <small class="form-text text-muted">Enter a valid email address.</small>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please enter your email address.</div>
                                            </div>
                                            <div class="mb-3 col-md-6">
                                                <label for="password" class="form-label">Password</label>
                                                <input type="password" value="<%=adminData.password %>" class="form-control" name="pass" placeholder="Password" required>
                                                <small class="form-text text-muted">Your password must be 8-20 characters long, contain letters and numbers only.</small>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please enter your password.</div>
                                            </div>
                                        </div>
                                        <div class="row g-2">
                                            <div class="mb-3 col-md-6">
                                                <label for="branch" class="form-label">User Branch:</label>
                                                <select id="branch" name="branch" class="form-select" required>
                                                    <%
                                                        if(branchData.length!=0){
                                                        var i=1;
                                                        branchData.forEach(function(data){
                                                    %>
                                                    <option value="<%=data.bname %>"><%=data.bname %></option>
                                                    <%  i++; }) %>
                                                    <% } else{ %>
                                                    <option value="No Branch">Branch Not Available</option>
                                                <% } %>
                                                </select>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please select a type.</div>
                                            </div>
                                            <div class="mb-3 col-md-6">
                                                <label for="role" class="form-label">User Role:</label>
                                                <select id="role" name="role" class="form-select" required>
                                                    <option value="Administrator">Administrator</option>
                                                    <option value="Data Entry">Data Entry</option>
                                                </select>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please select a type.</div>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary"><i class="fas fa-pen"></i> Edit User</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/js/form-validator.js"></script>
    <script src="/js/script.js"></script>
    <script>
        let element = document.getElementById('role');
        element.value = '<%= adminData.role %>';

        let branch = document.getElementById('branch');
        branch.value = '<%= adminData.branch %>';
    </script>
</body>

</html>