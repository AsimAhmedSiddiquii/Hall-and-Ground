    <link href="vendor/fontawesome/css/fontawesome.min.css" rel="stylesheet">
    <link href="vendor/fontawesome/css/solid.min.css" rel="stylesheet">
    <link href="vendor/fontawesome/css/brands.min.css" rel="stylesheet">
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/master.css" rel="stylesheet">
    <link rel="icon" type="image/png" href="img/favicon.png">
</head>

<body>
    <div class="wrapper">
        <!-- sidebar navigation component -->
        <nav id="sidebar" class="active">
            <div class="sidebar-header">
                <img src="img/bootstraper-logo.png" height="40px" width="170px" alt="Logo" class="app-logo">
            </div>
            <ul class="list-unstyled components text-secondary">
                <li>
                    <a href="/dashboard"><i class="fas fa-home"></i> Dashboard</a>
                </li>
                <li>
                    <a href="/branch"><i class="fas fa-address-card"></i>Branch</a>
                </li>
                <li>
                    <a href="/vendors"><i class="fas fa-cloud-download-alt"></i>Vendors</a>
                </li>
                <li>
                    <a href="/halls"><i class="fas fa-archway"></i>Halls</a>
                </li>
                <li>
                    <a href="#reports" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle no-caret-down"><i class="fas fa-layer-group"></i> Reports</a>
                    <ul class="collapse list-unstyled" id="reports">
                        <li>
                            <a href="/pending-payments"><i class="fas fa-angle-right"></i> Pending Payments</a>
                        </li>
                        <li>
                            <a href="/pending-bookings"><i class="fas fa-angle-right"></i> Pending Bookings</a>
                        </li>
                        <li>
                            <a href="/booking-reports"><i class="fas fa-angle-right"></i> Booking Reports</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="/admins"><i class="fas fa-user-friends"></i>Users</a>
                </li>
            </ul>
        </nav>
        <!-- end of sidebar component -->
        <div id="body" class="active">
            <!-- navbar navigation component -->
            <nav class="navbar navbar-expand-lg navbar-white bg-white">
                <button type="button" id="sidebarCollapse" class="btn btn-light">
                    <i class="fas fa-bars"></i><span></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="nav navbar-nav ms-auto">

                        <li class="nav-item dropdown">
                            <div class="nav-dropdown">
                                <a href="#" id="nav2" class="nav-item nav-link dropdown-toggle text-secondary" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user"></i> <span>Admin</span> <i style="font-size: .8em;" class="fas fa-caret-down"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end nav-link-menu">
                                    <ul class="nav-list">
                                        <li><a href="/logout-admin" class="dropdown-item"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            <!-- end of navbar navigation -->
            <div class="content">
                <div class="container">
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header">Add new hall</div>
                                <div class="card-body">
                                    <form method="post" action="/add-hall" class="needs-validation" novalidate accept-charset="utf-8">
                                        <div class="row g-2">
                                            <div class="mb-3 col-md-6">
                                                <label for="hallname" class="form-label">Hall Name</label>
                                                <input type="name" class="form-control" name="hallname" placeholder="Enter Hall Name" required>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please enter hall name.</div>
                                            </div>
                                            <div class="mb-3 col-md-6">
                                                <label for="type" class="form-label">Branch Name:</label>
                                                <select name="branchName" class="form-select" required>
                                                    <%
                                                        if(branchData.length!=0){
                                                        var i=1;
                                                        branchData.forEach(function(data){
                                                    %>
                                                    <option value="<%=data.bname %>"><%=data.bname %></option>
                                                    <%  i++; }) %>
                                                    <% } else{ %>
                                                    <option value="No Branch">Branch Not Available</option>
                                                    <% } %>
                                                </select>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please select branch name.</div>
                                            </div>
                                        </div>
                                        <div class="row g-2">
                                            <div class="mb-3 col-md-6">
                                                <label for="rent" class="form-label">Hall Rent</label>
                                                <input id="rent" onblur="calculate()" type="name" class="form-control" name="rent" placeholder="Enter Rent" required>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please, enter hall rent.</div>
                                            </div>
                                            <div class="mb-3 col-md-6">
                                                <label for="security" class="form-label">Security Deposit</label>
                                                <input type="text" class="form-control" name="security" placeholder="Enter Security Deposit" required>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please, enter Security Deposit.</div>
                                            </div>
                                        </div>
                                        <div class="row g-2">
                                            <div class="mb-3 col-md-6">
                                                <label for="scharge" class="form-label">Service Charges</label>
                                                <input type="name" class="form-control" name="scharge" placeholder="Enter Service Charges" required>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please, enter Service Charges.</div>
                                            </div>
                                            <div class="mb-3 col-md-6">
                                                <label for="GSTamount" class="form-label">GST Amount</label>
                                                <input id="gst" type="name" class="form-control" name="GSTamount" placeholder="Enter GST Amount" readonly>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please, enter Vendor Website.</div>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Add Hall</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/js/form-validator.js"></script>
    <script src="/js/script.js"></script>
    <script>
        var rent = document.getElementById("rent")
        var gst = document.getElementById("gst")

        function calculate() {
            gst.value = (rent.value * 18) / 100;
        }
    </script>
</body>

</html>